<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Rhythm.Controls.VolumeControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Rhythm.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Loading="OnLoading"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Button
            x:Name="VolumeMuteButton"
            Grid.Column="0"
            Width="32"
            Height="32"
            Padding="0"
            Background="Transparent"
            BorderBrush="Transparent"
            Click="VolumeMuteButton_Click"
            ToolTipService.ToolTip="Volume">
            <FontIcon
                x:Name="VolumeMuteIcon"
                FontFamily="Segoe MDL2 Assets"
                FontSize="16"
                Glyph="&#xE767;" />
        </Button>
        <Slider
            x:Name="VolumeSlider"
            Grid.Column="1"
            Width="100"
            Margin="6,0,0,0"
            Maximum="100"
            Minimum="0"
            ValueChanged="VolumeSlider_ValueChanged"
            Value="{x:Bind _volume, Mode=TwoWay}" />
    </Grid>
</UserControl>
